@import '../vars.styl'
@import '../basic.styl'

.grantee-badge
  margin: auto
  width: 100px
  height: 100px
  border-radius: 25%
  background-position: center center
  background-repeat: no-repeat
  background-size: cover

.impact-report:hover a
  text-decoration: none

.dlbutton
  background-color: rgba(0,0,0,0)
  border: 2px solid #222
  padding: 5px 10px
  color: #222
  transition: .3s
  font-weight: bold

.impact-report:hover .dlbutton
  text-decoration: none
  background-color: #222
  color: #FFF
