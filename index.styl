@import url('https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:300')
@import 'vars.styl'
@import 'basic.styl'
@import 'generic.styl'


@font-face
  font-family: hack-zh
  font-weight: 300
  src: local("Helvetica Neue")
  url: sans-serif
  unicode-range: U+4E00-9FFF

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-size: 20px
  font-family: hack-zh, "Saira Extra Condensed", Helvetica, Arial, sans-serif

.navbar
  font-size: 0.8em

.navbar-brand img
  width: 32px

.footer
  background: #222
  padding: 40px
  color: #fff
  font-size: 0.8em
  h5
    margin-bottom: 20px
  a
    color: #fff
    display: block
  .fa
    width: 20px
    margin-right: 5px
    text-align: center
  .row
    width: 100%
    max-width: 80%
    margin: auto

.jumbotron
  padding: 0
  background: #fffff9 
  background: -moz-linear-gradient(45deg, #fffff9 0%, #fff 100%)
  background: -webkit-linear-gradient(45deg, #fffff9 0%,#fff 100%)
  background: linear-gradient(45deg, #fffff9 0%,#fff 100%)
  .inner
    margin: 0
    padding: 60px 0 0
    width: 100%
    height: 100%
    background-image: url(img/matrix.svg)
    box-shadow: inset 0 -3px 4px rgba(0,0,0,0.2)
  font-size: 1.2em
  border-radius: 0
  h1
    font-size: 2.7em
    font-weight: 700
  .lead
    margin: 20px 0 50px
    .zh
      font-size: 1.5em
  .btn
    width: 200px
    font-size: 1.1em
    padding-bottom: 15px

.btn
  font-size: 1.15em

.content
  max-width: 1024px
  width: 100%
  padding: 30px 10px 100px
  margin: auto
  h1, h4
    font-weight: 900

.red
  color: #d21

.gray
  color: #999

#carousel-video
  p.text-left
    font-size: 0.8em
  .carousel-control-prev, .carousel-control-next 
    width: 20px
    mix-blend-mode: difference
    span
      background-size: 60%
      padding: 15px
      border-radius: 50%
      background-color: #222
  .carousel-indicators
    margin: 0
    bottom: -25px
    li.active
      background-color: #f00
    li
      background-color: rgba(0,0,0,0.5)

.events
  .event
    h4 .en
      display: inline
      font-size: 0.9em
    margin: 15px 0 50px
    .thumb
      background-color: #eee
      background-image: url(img/events/na.jpg)
    .thumb, .inner
      width: 240px
      height: 290px
      margin-bottom: 5px
      border-radius: 6px
      background-position: center center
      background-repeat: no-repeat
      background-size: cover
      box-shadow: 0 2px 2px rgba(0,0,0,0.4)
      .thumb-inner
        margin: 0
    .links .btn
      font-size: 0.65em
    .desc
      font-size: 0.9em
